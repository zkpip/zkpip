{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@zkpip/core": [
        "packages/core/src/index.ts"
      ],
      "@zkpip/cli": [
        "packages/cli/src/index.ts"
      ],
      "@zkpip/adapters-core": [
        "packages/adapters/core/src/index.ts"
      ]
    }
  },
  "include": [
    "packages/**/scripts/**/*.ts",
    "packages/**/src/**/*.ts",
    "packages/**/tools/**/*.ts",
    "packages/**/types/**/*.d.ts",
    "packages/**/vitest.config.ts",
    "packages/*/scripts/**/*.ts",
    "packages/*/src/**/*.ts",
    "packages/*/tools/**/*.ts",
    "packages/*/types/**/*.d.ts",
    "packages/*/vitest.config.ts",
    "scripts/**/*.d.ts",
    "scripts/**/*.ts",
    "types/**/*.d.ts",
    "vitest.config.ts"
  ],
  "exclude": [
    "coverage",
    "dist",
    "eslint.config.js",
    "fixtures/**",
    "node_modules",
    "scripts/**/*.mjs"
  ]
}