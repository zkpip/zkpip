{
  "name": "zkpip",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/cli",
    "packages/adapters/*"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf packages/*/dist packages/*/*.tsbuildinfo",
    "lint": "eslint . --max-warnings=0",
    "test": "npm --workspaces --if-present run test && vitest run",
    "test:ws": "npm --workspaces run test",
    "build:clean": "rimraf packages/*/dist packages/*/*.tsbuildinfo && tsc -b"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "eslint": "8.57.1",
    "eslint-plugin-unused-imports": "4.2.0",
    "eslint-plugin-vitest": "0.5.4",
    "rimraf": "5.0.10",
    "typescript": "5.5.4",
    "vitest": "^3.2.4",
    "eslint-plugin-import": "2.29.1",
    "eslint-import-resolver-node": "0.3.9",
    "eslint-import-resolver-typescript": "3.6.1",
    "tsx": "4.19.0",
    "@types/yargs": "^17.0.32",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "eslint-import-resolver-alias": "^1.1.2",
    "dotenv": "^16.4.5"
  }
}