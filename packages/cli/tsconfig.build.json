{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/__tests__/**", "**/*.test.ts", "**/*.spec.ts", "scripts/**"],
  "references": [
    { "path": "../core/tsconfig.build.json" }
  ]
}