{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "allowJs": false
  },
  "include": ["src/**/*", "src/**/*.ts"],
  "exclude": [
    "src/**/__tests__/**",
    "**/*.test.ts",
    "scripts/**"
  ]
}