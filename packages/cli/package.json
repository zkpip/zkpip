{
  "name": "@zkpip/cli",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "bin": {
    "zkpip": "./dist/index.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=20.10"
  },
  "scripts": {
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint .",
    "prebuild": "npm -w @zkpip/core run build",
    
    "build": "tsc -b && node ./scripts/make-executable.mjs",
    "build:watch": "tsc -b -w",

    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",

    "e2e": "bash ./scripts/cli-e2e.sh",

    "format:check": "prettier -c \"src/**/*.{ts,js,mjs,cjs,md,json,yml,yaml}\"",
    "format": "prettier -w \"src/**/*.{ts,js,mjs,cjs,md,json,yml,yaml}\"",

    "smoke": "npm run -ws build && node packages/cli/dist/index.js verify --verification packages/core/schemas/tests/vectors/mvs/verification/valid.groth16.snarkjs.json --exit-codes && node packages/cli/dist/index.js verify --verification packages/core/schemas/tests/vectors/mvs/verification/invalid.groth16.snarkjs.json --exit-codes || true"
  },
  "dependencies": {
    "@types/yargs": "^17.0.33",
    "snarkjs": "^0.7.5",
    "yargs": "^18.0.0",
    "@zkpip/core": "0.1.0"
  },
  "devDependencies": {
    "vitest": "^3.2.4"
  }
}
