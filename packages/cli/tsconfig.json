{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@zkpip/core": [
        "../core/dist/index.d.ts",
        "../core/dist/index.js",
        "../core/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts"
  ]
}
