{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "strict": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,

    "baseUrl": "../..",
    "paths": {
      "@zkpip/core": ["packages/core/src/index.ts"],
      "@zkpip/core/*": ["packages/core/src/*"]
    },    

    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "skipLibCheck": true,
    "types": ["node"],

    "typeRoots": [
      "./src/types",
      "./types",
      "../../node_modules/@types"
    ]
  },
  "references": [{ "path": "../core" }],
  "composite": true,  
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
