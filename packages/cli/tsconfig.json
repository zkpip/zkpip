{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": ".",
    "types": [
      "node",
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "#fs-compat": [
        "src/utils/fs-compat.ts"
      ],
      "#paths": [
        "src/utils/paths.ts"
      ]
    }
  },
  "include": [
    "scripts",
    "scripts/**/*.ts",
    "src",
    "src/**/*.ts"
  ],
  "exclude": [
    "dist"
  ]
}