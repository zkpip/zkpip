{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "strict": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "**/*.test.ts"],
  "references": [{ "path": "../core" }]
}
