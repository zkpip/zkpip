{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "baseUrl": ".",
    "paths": {
      "@zkpip/core": ["../core/dist/index.d.ts", "../core/src/index.ts"],
      "@zkpip/core/*": ["../core/dist/*"]
    },

    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "composite": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noEmitOnError": true,

    "types": ["node", "vitest"],
    "skipLibCheck": true,

    "resolveJsonModule": true,

    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "scripts/**",
    "e2e-artifacts/**",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.expect.json"
  ],
  "references": [{ "path": "../core" }]
}
