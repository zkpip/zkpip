{
  "name": "@zkpip/core",
  "version": "0.1.0",
  "private": false,
  "type": "module",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas/*": "./schemas/*"
  },

  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist", "schemas", "README.md", "LICENSE"],
  "sideEffects": false,
  "engines": { "node": ">=20.10" },

  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -b tsconfig.build.json",
    "build:watch": "tsc -b -w tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint .",
    "test": "vitest run",
    "test:watch": "vitest"
  },

  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.20.5",
    "vitest": "^3.2.4"
  }
}
