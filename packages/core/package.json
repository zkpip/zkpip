{
  "name": "@zkpip/core",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas/*": "./schemas/*"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "schemas"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=20.10"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "validate-schemas": "tsx ./scripts/validateSchemas.ts"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.20.5",
    "vitest": "^3.2.4"
  }
}
