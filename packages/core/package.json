{
  "name": "@zkpip/core",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas/*": "./dist/schemas/*"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w -p tsconfig.json",
    "postbuild": "node ./scripts/copy-schemas.mjs",
    "test:coverage": "vitest run --coverage",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run src/__tests__/validate.integration.test.ts src/__tests__/validate.integration.picker.test.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "validate-schemas": "node scripts/validateSchemas.js"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "fast-uri": "^3.1.0",
    "tsx": "^4.20.5",
    "@types/node": "^22.0.0",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^20.19.11",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "typescript-eslint": "^8.41.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0"    
  },
  "module": "./dist/index.js"
}
