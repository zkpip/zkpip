{
  "name": "@zkpip/core",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./validation/createAjv": {
      "types": "./dist/validation/createAjv.d.ts",
      "import": "./dist/validation/createAjv.js"
    },
    "./validation/addCoreSchemas": {
      "types": "./dist/validation/addCoreSchemas.d.ts",
      "import": "./dist/validation/addCoreSchemas.js"
    },
    "./validation/validators": {
      "types": "./dist/validation/validators.d.ts",
      "import": "./dist/validation/validators.js"
    },
    "./constants/canonicalIds": {
      "types": "./dist/constants/canonicalIds.d.ts",
      "import": "./dist/constants/canonicalIds.js"
    },
    "./validate/*": {
      "types": "./dist/validate/*.d.ts",
      "import": "./dist/validate/*.js"
    },
    "./schemaUtils": {
      "types": "./dist/schemaUtils.d.ts",
      "import": "./dist/schemaUtils.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "schemas",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=20.10"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "validate-schemas": "tsx ./scripts/validateSchemas.ts",
    "test:ajv": "vitest run src/__tests__/ajv*.test.ts",
    "dev": "vitest",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "format": "prettier -w .",
    "format:check": "prettier -c ."
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.20.5",
    "vitest": "^3.2.4"
  }
}
