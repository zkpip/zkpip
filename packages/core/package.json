{
  "name": "@zkpip/core",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./dist/cli/validate": "./dist/cli/validate.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\" \"spec/**/*.{ts,tsx}\" --no-error-on-unmatched-pattern --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\" \"spec/**/*.{ts,tsx}\" --no-error-on-unmatched-pattern --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --reporter=dot",
    "test:coverage": "vitest run --coverage",
    "schema:check": "node ./scripts/validate-samples.mjs"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^2.0.0"
  }
}
