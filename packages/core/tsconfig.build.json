{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "emitDeclarationOnly": false,
    "stripInternal": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": ["src//*.ts"],
  "exclude": ["/tests/", "/*.test.ts"]
}