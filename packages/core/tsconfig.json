{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "allowArbitraryExtensions": false,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "types": ["node", "vitest"]
  },
  "include": ["src", "src/**/*.ts", "schemas"],
  "exclude": ["dist", "**/*.test.ts"]
}
