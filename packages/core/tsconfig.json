{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,    

    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src//*.ts"],
  "exclude": ["/tests/", "/*.test.ts"]
}