{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,

    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",

    "paths": {}        
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ],
  "references": [
    { "path": "../core" }
  ]
}
