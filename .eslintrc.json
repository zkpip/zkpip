{
  "root": true,
  "env": { "es2022": true, "node": true },
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "sourceType": "module", "ecmaVersion": "latest" },
  "plugins": ["@typescript-eslint", "import", "unused-imports"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "settings": {
    "import/extensions": [".js", ".ts"],
    "import/resolver": {
      "typescript": { "alwaysTryTypes": true, "project": ["packages/*/tsconfig.json"] },
      "node": { "extensions": [".js", ".ts", ".d.ts"] }
    }
  },
  "rules": {
    "import/extensions": [
        "error",
        "ignorePackages",
        {
        "js": "always",  
        "ts": "never",   
        "tsx": "never"
        }
    ],
    "unused-imports/no-unused-imports": "error",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }]
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/__tests__/**/*.ts"],
      "globals": {
        "describe": "readonly",
        "it": "readonly",
        "test": "readonly",
        "expect": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "vi": "readonly"
      }
    }
  ],
    "overrides": [
    {
        "files": ["**/*.ts"],
        "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            { "js": "always", "ts": "never", "tsx": "never" }
        ]
        }
    },
    {
        "files": ["**/*.test.ts", "**/__tests__/**/*.ts"],
        "globals": {
        "describe": "readonly",
        "it": "readonly",
        "test": "readonly",
        "expect": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "vi": "readonly"
        }
    }
    ]
}
